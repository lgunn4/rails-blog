  <div class="hero-body">
    <div class="container has-text-centered">
     <div class="columns is-centered">
        <div class="column is-one-third mx-auto">
          <!-- Profile image -->
          <figure class="image is-128x128" style="margin: 0 auto">
            <img class="is-rounded" src=<%= @blog_configuration.profile_picture %> alt="Profile Image">
          </figure>
        </div>
      </div>
      <h1 class="title"><%= @blog_configuration.name %></h1>
      <h2 class="subtitle"><%= @blog_configuration.bio %></h2>

      <div class="tags is-centered">
        <% @categories.each do |category| %>
          <span class="tag <%= category.color %>"><%= category.name %></span>
        <% end %>
      </div>
    </div>